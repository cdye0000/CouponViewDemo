<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="cdy.com.couponviewdemo.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp">

        <cdy.com.couponview.CouponView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            app:vertical_style_left="circle">
            <TextView
                android:background="@color/colorPrimary"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
        </cdy.com.couponview.CouponView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp">

        <cdy.com.couponview.CouponView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            app:vertical_style_left="circle"
            app:vertical_style_right="circle"></cdy.com.couponview.CouponView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorAccent"
        android:padding="10dp">

        <cdy.com.couponview.CouponView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            app:color_parent_bg="@color/colorAccent"
            app:horizontal_style_top="triangle"></cdy.com.couponview.CouponView>
    </LinearLayout>


</LinearLayout>
